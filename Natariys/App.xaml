<Application x:Class="Natariys.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:Natariys"
             StartupUri="Windows/MainWindow.xaml">
    <Application.Resources>
        <Style x:Key="TextWite">
            <Setter Property="TextBlock.Foreground" Value="#fff"/>
        </Style>

        <Style TargetType="Button">
            <Setter Property="Background" Value="#2D59B3"/>
            <Setter Property="MinWidth" Value="100"/>
            <Setter Property="Padding" Value="5"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="BorderBrush" Value="#7391D9"/>
            <Setter Property="Foreground" Value="#fff"/>
            <Setter Property="FontSize" Value="15"/>
        </Style>

        <Style TargetType="Border">
            <Setter Property="CornerRadius" Value="3"/>
        </Style>

        <Style x:Key="TextList">
            <Setter Property="TextBlock.FontSize" Value="15"/>
        </Style>
        
    </Application.Resources>
</Application>
