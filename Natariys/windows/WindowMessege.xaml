<Window x:Class="Natariys.windows.WindowMessege"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Natariys.windows"
        mc:Ignorable="d"
        Title="Сообщения" MinHeight="450" Height="0" MinWidth="800" Width="0" WindowStartupLocation="CenterScreen"
        FontSize="16" FontWeight="SemiBold">
    <ScrollViewer HorizontalScrollBarVisibility="Disabled" VerticalScrollBarVisibility="Disabled" Background="#eeeeee">
        <DockPanel>
            <ListBox x:Name="__listDialog" SelectionChanged="__listDialog_Selected" Background="#463e36" Width="240" HorizontalContentAlignment="Stretch" Padding="0 0 2 0" ScrollViewer.VerticalScrollBarVisibility="Visible" ScrollViewer.HorizontalScrollBarVisibility="Disabled">
                <ListBox.ItemTemplate>
                    <DataTemplate>
                        <Border Background="#eee" Padding="5 2" Height="50">
                            <DockPanel VerticalAlignment="Center">
                                <Grid Width="40" Height="40" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="0 0 5 0" Background="#fff">
                                    <Rectangle StrokeThickness="2" Stroke="#463e36" RadiusX="5" RadiusY="5">
                                        <Rectangle.Fill>
                                            <ImageBrush ImageSource="{Binding img_path}" Stretch="UniformToFill"/>
                                        </Rectangle.Fill>
                                    </Rectangle>
                                </Grid>

                                <TextBlock FontSize="13" VerticalAlignment="Top" TextWrapping="Wrap">
                            <Run Text="{Binding first_name}"/>
                            <Run Text="{Binding last_name}"/>
                            <Run Text="{Binding sur_name}"/>
                                </TextBlock>
                            </DockPanel>
                        </Border>
                    </DataTemplate>
                </ListBox.ItemTemplate>
            </ListBox>
            <Grid Margin="10" Background="#eee">
                <Grid.RowDefinitions>
                    <RowDefinition Height="60"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="40"/>
                </Grid.RowDefinitions>

                    
                <DockPanel Name="__messageProfile">
                    <Grid Width="60" Height="60" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="0 0 10 0">
                        <Rectangle StrokeThickness="2" Stroke="#463e36" RadiusX="5" RadiusY="5">
                            <Rectangle.Fill>
                                <ImageBrush x:Name="__imgProfile" ImageSource="{Binding img_path}" Stretch="UniformToFill"/>
                            </Rectangle.Fill>
                        </Rectangle>
                    </Grid>

                    <TextBlock  FontSize="25" VerticalAlignment="Center" Width="350" HorizontalAlignment="Left" TextWrapping="Wrap">
                    <Run x:Name="__firstName" Text="{Binding first_name}"/>
                    <Run x:Name="__lastName" Text="{Binding last_name}"/>
                    <Run x:Name="__surName" Text="{Binding sur_name}"/>
                    </TextBlock>
                </DockPanel>
                    <Button Width="100" HorizontalAlignment="Right" Height="40" Content="Профиль" Click="Button_Click_ProfileReceiver"/>

                <Border Grid.Row="1" BorderBrush="#463e36" BorderThickness="2" Margin="0 10" Padding="5" Background="White">
                    <ScrollViewer Name="__scroll">
                        <ListBox Name="__messagesList" Focusable="False" HorizontalContentAlignment="Stretch" VerticalAlignment="Bottom">
                            <ListBox.ItemTemplate>
                                <DataTemplate>
                                    <Border Margin="2" Padding="5" MaxWidth="500" Background="#B22D59B3" HorizontalAlignment="{Binding Style}">
                                        <StackPanel>
                                            <TextBlock Text="{Binding Text}" TextWrapping="Wrap" FontSize="14"/>
                                            <TextBlock FontSize="10" Text="{Binding Date}" />
                                        </StackPanel>
                                    </Border>
                                </DataTemplate>
                            </ListBox.ItemTemplate>
                        </ListBox>
                    </ScrollViewer>
                </Border>

                <Grid Grid.Row="2">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="100"/>
                    </Grid.ColumnDefinitions>

                    <TextBox Name="__messageTxt" Grid.Column="0" Margin="0 0 10 0" VerticalContentAlignment="Center" />
                    <Button Content="Отправить" Grid.Column="1" Click="Button_Click_SendMessage"/>
                </Grid>
            </Grid>
        </DockPanel>
    </ScrollViewer>
</Window>
