<Window x:Class="Natariys.windows.WindowMyProfileWorker"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Natariys.windows"
        mc:Ignorable="d"
                Title="Мой профиль" MinHeight="550" Height="460" MinWidth="810" Width="810" FontSize="18" FontWeight="SemiBold" WindowStartupLocation="CenterScreen">
    <ScrollViewer HorizontalScrollBarVisibility="Auto" VerticalScrollBarVisibility="Auto">
        <Grid Background="#eeeeee">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="190"/>
                <ColumnDefinition Width="580"/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="auto"/>
            </Grid.RowDefinitions>

            <StackPanel Grid.Column="0" HorizontalAlignment="Center">
                <Grid x:Name="__imgProfile" Width="140" Height="140" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10">
                    <Rectangle StrokeThickness="2" Stroke="#463e36" RadiusX="5" RadiusY="5">
                        <Rectangle.Fill>
                            <ImageBrush  ImageSource="{Binding img_path}" Stretch="UniformToFill"/>
                        </Rectangle.Fill>
                    </Rectangle>
                </Grid>

                <StackPanel TextBlock.FontSize="15">
                    <Button x:Name="__photo" Content="Изменить фото" FontSize="15" Padding="2" Margin="0 0 0 20" Click="__photo_Click" IsEnabled="False"/>
                    <Button x:Name="__btnAlter" Content="Редактировать" Margin="0 0 0 5" Click="Button_Click_Alter"/>
                    <Button x:Name="__btnSave" Content="Сохранить" Margin="0 0 0 5" Click="BtnSave_Click_Save" IsEnabled="False"/>
                </StackPanel>
            </StackPanel>

            <StackPanel Grid.Column="1" Margin="0 10" x:Name="__panel" IsEnabled="False">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="100"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <Grid.Resources>
                        <Style TargetType="TextBlock">
                        </Style>
                        <Style TargetType="TextBox">
                            <Setter Property="Margin" Value="0 0 0 5"/>
                            <Setter Property="FontSize" Value="15"/>
                            <Setter Property="Padding" Value="2"/>
                        </Style>
                    </Grid.Resources>

                    <TextBlock Text="Имя: *"/>
                    <TextBlock Text="Фамилия: *" Grid.Row="1"/>
                    <TextBlock Text="Отчество:" Grid.Row="2"/>
                    <TextBlock Text="Адресс: *" Height="60" Grid.Row="5"/>
                    <TextBlock Text="Телефон: *" Grid.Row="6"/>
                    <TextBlock Text="E-mail:" Grid.Row="7"/>
                    <TextBlock Text="Услуги: *" Grid.Row="8"/>
                    <TextBlock Text="Логин: *" Grid.Row="10"/>
                    <TextBlock Text="Пароль: *" Grid.Row="11"/>

                    <TextBox Text="{Binding first_name}" x:Name="__firstName" Grid.Column="1"/>
                    <TextBox Text="{Binding last_name}" x:Name="__lastName" Grid.Column="1" Grid.Row="1"/>
                    <TextBox Text="{Binding sur_name}" x:Name="__surName" Grid.Column="1" Grid.Row="2"/>
                    <TextBox Text="{Binding address.name}" x:Name="__address" Grid.Column="1" Grid.Row="5" TextWrapping="Wrap"/>
                    <TextBox Text="{Binding phone}" x:Name="__phone" Grid.Column="1" Grid.Row="6"/>
                    <TextBox Text="{Binding email}" x:Name="__email" Grid.Column="1" Grid.Row="7"/>
                    <TextBox Text="{Binding login}" x:Name="__login" Grid.Column="1" Grid.Row="10" IsEnabled="False"/>
                    <TextBox Text="{Binding password}" x:Name="__password" Grid.Column="1" Grid.Row="11"/>

                    <ListBox x:Name="__listServ" ScrollViewer.HorizontalScrollBarVisibility="Disabled" Grid.Column="1" Grid.Row="8" Height="150" TextBlock.FontSize="15" TextBlock.Foreground="#463e36">
                        <ListBox.ItemsPanel>
                            <ItemsPanelTemplate>
                                <WrapPanel IsEnabled="True"/>
                            </ItemsPanelTemplate>
                        </ListBox.ItemsPanel>

                        <ListBox.ItemTemplate>
                            <DataTemplate>
                                <Border Background="#eee">
                                    <TextBlock Padding="10 3" Text="{Binding name}"/>
                                </Border>
                            </DataTemplate>
                        </ListBox.ItemTemplate>
                    </ListBox>

                    <Grid Grid.Column="1" Grid.Row="9" Margin="0 5">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="auto"/>
                            <ColumnDefinition Width="auto"/>
                        </Grid.ColumnDefinitions>

                        <TextBox x:Name="__txtAddServ" Grid.Column="0" Margin="0"/>
                        <Button x:Name="__btnAdd" Content="Добавить" Grid.Column="1" Margin="5 0 0 0" Padding="0 1" FontSize="15" Click="BtnAdd_Click_AddServ"/>
                        <Button x:Name="__btnDel" Content="Удалить" Grid.Column="2" Margin="5 0 0 0" Padding="0 1" FontSize="15" Click="BtnAdd_Click_DelServ"/>
                    </Grid>

                </Grid>
            </StackPanel>
        </Grid>
    </ScrollViewer>
</Window>
