<Window x:Class="Natariys.windows.WindowServ"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Natariys.windows"
        mc:Ignorable="d"
        Title="WindowServ" MinHeight="410" Height="0" MinWidth="800" Width="0"
        Background="#eeeeee" FontSize="14" FontWeight="SemiBold" WindowStartupLocation="CenterScreen">
    <Grid>
        <StackPanel >
            <ListBox HorizontalContentAlignment="Stretch" x:Name="__listServ">
                <ListBox.ItemsPanel>
                    <ItemsPanelTemplate>
                        <WrapPanel Orientation="Vertical" Height="300"/>
                    </ItemsPanelTemplate>
                </ListBox.ItemsPanel>

                <ListBox.ItemTemplate>
                    <DataTemplate>
                        <CheckBox Width="200" VerticalContentAlignment="Center" Checked="CheckBox_Checked" Unchecked="CheckBox_Unchecked">
                            <TextBlock Text="{Binding name}" TextWrapping="Wrap"/>
                        </CheckBox>
                    </DataTemplate>
                </ListBox.ItemTemplate>

            </ListBox>

            <StackPanel Width="100" Margin="0 10 0 0">
                <Button Content="Готово" Margin="0 0 0 5" Click="Button_ClickSave"/>
            </StackPanel>
        </StackPanel>
    </Grid>
</Window>
