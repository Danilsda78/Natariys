<Window x:Class="Natariys.windows.WindowProfileClient"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Natariys.windows"
        mc:Ignorable="d"
    Title="Профиль" MinHeight="210" Height="0" MinWidth="600" Width="0" FontSize="18" FontWeight="SemiBold" WindowStartupLocation="CenterOwner">
    <Grid Background="#eeeeee">
        <Grid HorizontalAlignment="Center" VerticalAlignment="Center">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="190"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="auto"/>
            </Grid.RowDefinitions>

            <StackPanel Grid.Column="0" HorizontalAlignment="Center">
                <Grid Width="140" Height="140" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10">
                    <Rectangle StrokeThickness="2" Stroke="#463e36" RadiusX="5" RadiusY="5">
                        <Rectangle.Fill>
                            <ImageBrush x:Name="__imgProfile" ImageSource="{Binding img_path}" Stretch="UniformToFill"/>
                        </Rectangle.Fill>
                    </Rectangle>
                </Grid>
            </StackPanel>

            <StackPanel Grid.Column="1" Margin="0 10">
                <TextBlock FontSize="25" TextWrapping="Wrap">
            <Run Text="{Binding first_name}" x:Name="__firstName" />
            <Run Text="{Binding last_name}" x:Name="__lastName" />
            <Run Text="{Binding sur_name}" x:Name="__surName" />
                </TextBlock>

                <DockPanel Margin="0 10 0 0">
                    <StackPanel Margin="0 0 5 0">
                        <TextBlock Text="Телефон:"/>
                        <TextBlock Text="E-mail:"/>
                    </StackPanel>
                    <StackPanel TextBlock.Foreground="Gray">
                        <TextBlock Text="{Binding phone}"/>
                        <TextBlock Text="{Binding email}"/>
                    </StackPanel>
                </DockPanel>
            </StackPanel>
        </Grid>
    </Grid>
</Window>
